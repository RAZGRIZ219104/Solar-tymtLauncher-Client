{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "tymtLauncher",
    "version": "2.0.2"
  },

  "tauri": {
    "allowlist": {
      "all": true,
      "fs": {
        "removeDir": true,
        "removeFile": true,
        "scope": [
          "**",
          "/home/*/.local/share/tymtLauncher/*/games/*",
          "/home/*/.local/share/tymtLauncher/*/games/*/*",
          "/home/*/.local/share/tymtLauncher/*/games/*/*/*",
          "/home/*/.local/share/tymtLauncher/*/games/*/*/*/*",
          "/Users/*/Library/Application Support/tymtLauncher/*/games/*",
          "/Users/*/Library/Application Support/tymtLauncher/*/games/*/*",
          "/Users/*/Library/Application Support/tymtLauncher/*/games/*/*/*",
          "/Users/*/Library/Application Support/tymtLauncher/*/games/*/*/*/*"
        ],
        "all": true
      },
      "os": {
        "all": true
      },
      "shell": {
        "all": true,
        "execute": true,
        "sidecar": true,
        "open": true
      },
      "notification": {
        "all": true
      },
      "clipboard": {
        "all": true,
        "writeText": true,
        "readText": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": [
          "https://*",
          "http://*",
          "https://api.mainnet-beta.solana.com/*",
          "https://api.devnet.solana.com/*",
          "https://unisat.io/*"
        ]
      },
      "window": {
        "all": true,
        "create": true
      }
    },
    "windows": [
      {
        "label": "tymtLauncher",
        "title": "tymtLauncher 2.0.2",
        "resizable": true,
        "width": 1440,
        "height": 1024,
        "minWidth": 1200,
        "minHeight": 800,
        "center": true,
        "additionalBrowserArgs": "--disable-web-security"
      },
      {
        "label": "tymt_d53_transaction",
        "title": "D53 transaction",
        "url": "d53-transaction",
        "transparent": true,
        "decorations": false,
        "resizable": false,
        "visible": false,
        "width": 440,
        "x": 5,
        "y": 5,
        "additionalBrowserArgs": "--disable-web-security",
        "alwaysOnTop": true,
        "focus": true
      }
    ],
    "systemTray": {
      "iconPath": "icons/128x128@2x.png",
      "iconAsTemplate": true
    },
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "tymtLauncher",
      "publisher": "dev@solarenterprises.com",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "category": "Game",
      "shortDescription": "A multi-chain game launcher and an environment for creating and publishing games",
      "longDescription": "tymt is a multi-chain game launcher and an environment for creating and publishing games. \n tymt is a gaming environment and platform, built using the Solar Core blockchain solutions, enabling a new world of game economy - empowering Developers and Publishers!"
    },
    "macOSPrivateApi": true
  }
}
